<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2">

    <include layout="@layout/toolbar" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ask_for_amount"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textSize="40sp"
        android:textColor="#ff0000"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_above="@+id/rateval"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="60dp" />
    <Spinner
        android:id="@+id/spin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp">

    </Spinner>

    <Button
        android:id="@+id/b_execute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/execute"
        android:textColor="#ffffff"
        android:background="#000000"
        android:width="200dp"
        android:height="60dp"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button"
        android:layout_marginBottom="27dp" />

    <EditText
        android:hint="@string/amount_in_rs"
        android:text="0"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rateval"
        android:inputType="numberDecimal"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:text="@string/enough_money"
        android:layout_marginBottom="36dp"
        android:textColor="#ffffff"
        android:background="#000000"
        android:width="200dp"
        android:height="60dp"
        android:textSize="20sp"
        android:layout_above="@+id/b_execute"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/ask_mood"
        android:textSize="40sp"
        android:id="@+id/textView11"
        android:layout_above="@+id/spin"
        android:layout_centerHorizontal="true" />
</RelativeLayout>